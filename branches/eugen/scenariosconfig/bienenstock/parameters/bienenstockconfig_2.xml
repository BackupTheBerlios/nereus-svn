<?xml version="1.0" encoding="ISO-8859-1"?>
<!--
    Document   : bienenstockconfig.xml
    Created on : 26. April 2005, 18:45
    Author     : Eugen Volk
    Description:
        Diese Datei dient zur Konfiguration der Parameter-Werte für
        das Bienenstockszenario.
        
        name: der Name des Parameters
        wert: der Wert des Parameters
        type: der Typ des Parameters ist Element von {string, int, double, float, boolean}
        changeable: falls true, so kann der Parameterwert während der Laufzeit
            verändert werden.
-->


<bienenstockconfig>
    <property name="numExps" wert="1" type="int" changeable="true"/>
    <property name="ScenarioName" wert="Bienenstock" type="string" changeable="true"/>
    <property name="StartEnergy" wert="200" type="double" changeable="true"/>
    <property name="honigStarten" wert="2" type="int" changeable="false"/>
    <property name="honigFliegen" wert="5" type="int" changeable="false"/>
    <property name="honigLanden" wert="2" type="int" changeable="false"/>
    <property name="honigWarten" wert="1" type="int" changeable="false"/>
    <property name="honigTanzenAlles" wert="10" type="int" changeable="false"/>
    <property name="honigTanzenRichtung" wert="5" type="int" changeable="false"/>
    <property name="honigTanzenEntfernung" wert="5" type="int" changeable="false"/>
    <property name="honigZuschauen" wert="5" type="int" changeable="false"/>
    <property name="honigHonigTanken" wert="1" type="int" changeable="false"/>
    <property name="honigNektarAbliefern" wert="1" type="int" changeable="false"/>
    <property name="honigNektarAbbauen" wert="10" type="int" changeable="false"/>
    <property name="startHonig" wert="100" type="int" changeable="false"/>
    <property name="startNektar" wert="100" type="int" changeable="false"/>
    <property name="maxGelHonig" wert="100" type="int" changeable="false"/>
    <property name="maxGelNektar" wert="100" type="int" changeable="false"/>
    <property name="timeout" wert="10000" type="int" changeable="false"/>
    <property name="kursNektarHonig" wert="2.0" type="double" changeable="false"/>
    <property name="maxNektarZuHonig" wert="50" type="int" changeable="true"/>
    <property name="unschaerfeWinkel" wert="0.1" type="double" changeable="false"/>
    <property name="unschaerfeEntfernung" wert="0.1" type="double" changeable="false"/>
    <property name="endbedingungMaxNektar" wert="0" type="int" changeable="false"/>
    <property name="endbedingungMaxHonig" wert="0" type="int" changeable="true"/>
    <property name="endbedingungMaxRunden" wert="1000" type="int" changeable="true"/>
    <property name="endbedingung" wert="2000" type="int" changeable="true"/>
</bienenstockconfig>

